@model OpenBankingApi.Models.AuthorizedSites

@{
    ViewBag.Title = "Home Page";
}

<div class="row">

    <div class="jumbotron">
        <h2>Your Authorized Sites</h2>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Site Domain</th>
                <th scope="col">Authorization date</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.authorizedSites.Count; i++)
            {
                 <tr>
                    <th scope="row">@((i+1).ToString())</th>
                    <td>@Model.authorizedSites.ElementAt(i).SiteName</td>
                    <td>@Model.authorizedSites.ElementAt(i).authorizationDate.ToShortDateString()</td>
                </tr>
            }

        </tbody>
    </table>
</div>